{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "rewrites": [
    { "source": "/api/v1/(.*)", "destination": "${UPSTREAM_API_BASE}/$1" },
    { "source": "/api/(.*)",   "destination": "${UPSTREAM_API_BASE}/$1" },
    { "source": "/auth/(.*)",  "destination": "${UPSTREAM_API_BASE}/$1" },
    { "source": "/login",      "destination": "${UPSTREAM_API_BASE}/login" },
    { "source": "/signin",     "destination": "${UPSTREAM_API_BASE}/signin" }
  ]
}
