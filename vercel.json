{
  "version": 2,
  "functions": {
    "nodeVersion": "20.x"
  },
  "installCommand": "corepack enable && pnpm install --no-frozen-lockfile",
  "buildCommand": "pnpm build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/api/v1/health/status",
      "destination": "/api/v1/healthz"
    },
    {
      "source": "/api/v1/health",
      "destination": "/api/v1/healthz"
    }
  ],
  "headers": [
    {
      "source": "/:file*\\.(png|jpg|jpeg|gif|webp|svg|ico)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "routes": [
    { "src": "^/api/v1/(.*)$", "dest": "api/v1/[...path].js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
