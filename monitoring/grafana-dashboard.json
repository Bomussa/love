{
  "dashboard": {
    "title": "MMC-MMS Production Monitoring",
    "tags": ["mmc", "production", "reliability"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "System Reliability (R > 0.98 Required)",
        "type": "gauge",
        "targets": [
          {
            "expr": "mmc_reliability",
            "legendFormat": "Reliability"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.95, "color": "yellow"},
                {"value": 0.98, "color": "green"}
              ]
            },
            "min": 0,
            "max": 1,
            "unit": "percentunit"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "System Status",
        "type": "stat",
        "targets": [
          {
            "expr": "mmc_system_up",
            "legendFormat": "Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            },
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN"},
              {"type": "value", "value": "1", "text": "UP"}
            ]
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "5xx Error Rate (Must be < 2%)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m])",
            "legendFormat": "Error Rate"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "min": 0, "max": 0.1}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0.02], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "High 5xx Error Rate",
          "noDataState": "no_data",
          "notifications": []
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Queue Statistics",
        "type": "graph",
        "targets": [
          {
            "expr": "mmc_queue_waiting",
            "legendFormat": "Waiting"
          },
          {
            "expr": "mmc_queue_serving",
            "legendFormat": "Serving"
          },
          {
            "expr": "mmc_queue_done",
            "legendFormat": "Done"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "PIN Code Status",
        "type": "graph",
        "targets": [
          {
            "expr": "mmc_pins_active",
            "legendFormat": "Active"
          },
          {
            "expr": "mmc_pins_used",
            "legendFormat": "Used"
          },
          {
            "expr": "mmc_pins_total",
            "legendFormat": "Total"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 6,
        "title": "Active Alerts",
        "type": "alertlist",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24}
      }
    ]
  }
}
